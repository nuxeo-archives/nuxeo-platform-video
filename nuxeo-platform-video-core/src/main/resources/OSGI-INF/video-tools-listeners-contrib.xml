<component name="org.nuxeo.ecm.platform.video.tools.listeners.VideoBeforeModificationListener">

	<extension target="org.nuxeo.ecm.core.event.EventServiceComponent"
		point="listener">

		<listener name="videoClosedCaptionsListener" async="true"
			postCommit="true" class="org.nuxeo.ecm.platform.video.tools.listeners.CCExtractorListener"
			priority="100">
			<event>videoChanged</event>
		</listener>

		<listener name="videoBeforeModificationListener" async="false"
			postCommit="false" class="org.nuxeo.ecm.platform.video.tools.listeners.VideoBeforeModificationListener"
			priority="100">
			<event>aboutToCreate</event>
			<event>beforeDocumentModification </event>
		</listener>

	</extension>

</component>
